<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zz.jishuanji1.MainActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yi"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.example.zz.jishuanji1.MainActivity">

    <EditText
          android:layout_width="fill_parent"
          android:layout_height="100dp"

          android:id="@+id/et_input"
          android:focusable="false"
          android:gravity="right|bottom"
          android:text="0"
          android:background="@drawable/whirte_bg"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/btn_clear"
            android:paddingRight="10dp"
            android:onClick="clear"
            android:background="@drawable/whirte_selector"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="DEL"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_del"
            android:paddingRight="10dp"
            android:onClick="del"
            android:background="@drawable/whirte_selector"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="/"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_divide"
            android:paddingRight="10dp"
            android:onClick="divide"
            android:background="@drawable/whirte_selector"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="*"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_multiply"
            android:paddingRight="10dp"
            android:onClick="multiply"
            android:background="@drawable/whirte_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/btn_7"
            android:paddingRight="10dp"
            android:onClick="seven"
            android:background="@drawable/whirte_selector"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_8"
            android:paddingRight="10dp"
            android:onClick="eight"
            android:background="@drawable/whirte_selector"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_9"
            android:paddingRight="10dp"
            android:onClick="nine"
            android:background="@drawable/whirte_selector"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="-"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_minus"
            android:paddingRight="10dp"
            android:onClick="minus"
            android:background="@drawable/whirte_selector"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/btn_4"
            android:paddingRight="10dp"
            android:onClick="four"
            android:background="@drawable/whirte_selector"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_5"
            android:paddingRight="10dp"
            android:onClick="five"
            android:background="@drawable/whirte_selector"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_6"
            android:paddingRight="10dp"
            android:onClick="six"
            android:background="@drawable/whirte_selector"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_plus"
            android:paddingRight="10dp"
            android:onClick="plus"
            android:background="@drawable/whirte_selector"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="1"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:id="@+id/btn_1"
                    android:paddingRight="10dp"
                    android:onClick="one"
                    android:background="@drawable/whirte_selector"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="2"
                    android:layout_marginLeft="10dp"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:id="@+id/btn_2"
                    android:paddingRight="10dp"
                    android:onClick="two"
                    android:background="@drawable/whirte_selector"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="3"
                    android:layout_marginLeft="10dp"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:id="@+id/btn_3"
                    android:paddingRight="10dp"
                    android:onClick="three"
                    android:background="@drawable/whirte_selector"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <Button
                        android:layout_width="170dp"


                        android:layout_height="80dp"
                        android:text="0"
                        android:gravity="right|bottom"
                        android:textSize="20sp"
                        android:id="@+id/btn_0"
                        android:paddingRight="10dp"
                        android:onClick="zero"
                        android:background="@drawable/whirte_selector"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="."
                        android:layout_marginLeft="10dp"
                        android:gravity="right|bottom"
                        android:textSize="20sp"
                        android:id="@+id/btn_point"
                        android:paddingRight="10dp"
                        android:onClick="point"
                        android:background="@drawable/whirte_selector"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="80dp"
            android:layout_height="170dp"
            android:text="="
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/btn_equal"
            android:paddingRight="10dp"
            android:onClick="equal"
            android:background="@drawable/orange_selector"/>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:padding="20dp"
        android:layout_below="@+id/yi"
        android:layout_alignParentEnd="true"
        android:text="*注：一个表达式只能含一个运算符，否则会导致程序崩溃"
        />
    </RelativeLayout>
    </ScrollView>